    String mofdep_id = Data.getMofdep_name().split("@")[0];
    String mofdep_code = Data.getMofdep_name().split("@")[2];
    String mofdep_name1 = Data.getMofdep_name().split("@")[1];
    String mofdep_name = URLDecoder.decode(mofdep_name1, "UTF-8");
